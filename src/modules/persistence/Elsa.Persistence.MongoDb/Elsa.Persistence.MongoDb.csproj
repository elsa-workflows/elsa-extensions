<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>
            Provides MongoDB implementations of various abstractions from various modules.
        </Description>
        <PackageTags>elsa extension module persistence mongo</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Options"/>
        <PackageReference Include="MongoDB.Driver"/>
        <PackageReference Include="MongoDB.Driver.Core.Extensions.DiagnosticSources"/>
        <PackageReference Include="MongoDB.Driver.Extensions"/>
    </ItemGroup>

    <ItemGroup Label="Elsa" Condition="'$(UseProjectReferences)' != 'true'">
        <PackageReference Include="Elsa.Alterations" />
        <PackageReference Include="Elsa.Identity"/>
        <PackageReference Include="Elsa.Labels"/>
        <PackageReference Include="Elsa.Workflows.Runtime"/>
    </ItemGroup>

    <ItemGroup Label="Elsa" Condition="'$(UseProjectReferences)' == 'true'">
        <ProjectReference Include="..\..\..\..\..\elsa-core\src\modules\Elsa.Alterations\Elsa.Alterations.csproj" />
        <ProjectReference Include="..\..\..\..\..\elsa-core\src\modules\Elsa.Identity\Elsa.Identity.csproj"/>
        <ProjectReference Include="..\..\..\..\..\elsa-core\src\modules\Elsa.Labels\Elsa.Labels.csproj"/>
        <ProjectReference Include="..\..\..\..\..\elsa-core\src\modules\Elsa.Workflows.Runtime\Elsa.Workflows.Runtime.csproj"/>
    </ItemGroup>

</Project>
